    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  

	<div class="field">
		<%= f.label :category_id %><br />
		<%= select("entry","category_id", @categories.collect {|p| [ p.name, p.id ]},{:include_blank => 'Category'}) %>
	</div>
  <div class="field">
    <%= f.label :type_id %><br />
    
    <%= select("entry","type_id", @types.collect {|p| [ p.name, p.id ]},{:include_blank => 'Frequency'}) %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
