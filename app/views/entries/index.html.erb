<h1>Listing entries</h1>

<table>
  <tr>
    <th>Concept</th>
    <th>Amount</th>
    <th>User</th>
    <th>Category</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.concept %></td>
    <td><%= entry.amount %></td>
    <td><%= entry.user_id %></td>
    <td><%= entry.category_id %></td>
    <td><%= entry.type_id %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

